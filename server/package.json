{
  "name": "showmoore-server",
  "version": "1.0.0",
  "description": "Backend server for Showmoore e-commerce application",
  "main": "server.js",
  "type": "commonjs",
  "publishConfig": {
    "registry": "http://your-nexus-url:8081/repository/npm-hosted/"
  },
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "publish:nexus": "npm publish",
    "test": "jest",
    "test:coverage": "jest --coverage --watchAll=false --forceExit"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "jest-sonar-reporter": "^2.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "testResultsProcessor": "jest-sonar-reporter",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/config/",
      "server.js"
    ]
  }
}